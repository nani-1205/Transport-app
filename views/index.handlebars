<h1>Available Transport Options</h1>

<div class="transport-grid">
  {{#each transportOptions}}
    <div class="transport-card">
      <img src="{{image}}" alt="{{name}}">
      <h2>{{name}}</h2>
      <p>{{description}}</p>
      <a href="/transport/{{id}}" class="details-button">View Details</a>
    </div>
  {{/each}}
</div>